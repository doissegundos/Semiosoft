<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    app:layout_dodgeInsetEdges="bottom"
    tools:context=".CardiovascularActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="321dp"
        android:layout_height="94dp"
        android:layout_marginTop="88dp"
        android:layout_marginBottom="549dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ca" />

    <ScrollView
        android:layout_width="320dp"
        android:layout_height="416dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="198dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="117dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/inspecaoPalpacaoButton"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/b"
                android:drawableRight="@drawable/righ_foreground"
                android:text="Inspeção e palpação" />

            <Button
                android:id="@+id/cardio2button"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/b"
                android:drawableRight="@drawable/righ_foreground"
                android:text="Percussão" />

            <Button
                android:id="@+id/cardio3button"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/b"
                android:drawableRight="@drawable/righ_foreground"
                android:text="Ausculta" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
